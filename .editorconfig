# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.bash, *.sh]
end_of_line = lf

[*.yml, *.yaml]
indent_size = 2
indent_style = space

[*]
charset = utf-8
end_of_line = crlf
files.encoding = "utf8"
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true
